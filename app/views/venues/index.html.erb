<h1>Geokit Rails</h1>
<h3>Using distance from the origin point (50 miles)</h3>

<div class="row">
    <%= form_tag('/venues', method: :get, class: 'navbar-form navbar-left') do %>
        <div class="form-group">
            <%= select_tag :city, options_for_select([ "Stockholm", "London" ], params[:city]), class: 'select2' -%>
        </div>
        <%= submit_tag 'Search', class: 'btn btn-default' %>
    <% end %>
</div>

<div class="row">
    <table class="table table-bordered table-hover">
      <thead>
          <tr>
            <th>Name</th>
            <th>Latitude</th>
            <th>Longitude</th>
          </tr>
      </thead>
      <%- if @venues.blank? -%>
        <tr>
          <%- if params[:city] -%>
          <td colspan="3">Sorry, we don't find venues for this city.</td>
          <%- else -%>
          <td colspan="3">Please, choose a city.</td>
          <%- end -%>
        </tr>
      <%- else -%>
          <%- @venues.each do |venue| -%>
              <tr>
                <td><%= venue.name -%></td>
                <td><%= venue.latitude -%></td>
                <td><%= venue.longitude -%></td>
              </tr>
          <%- end -%>
      <%- end -%>
    </table>
</div>

<script>
    $('.select2').select2();
</script>